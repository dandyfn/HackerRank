       
package HackerRank;

import java.util.Scanner;

public class main {
    public static void main(String[] args) {
       
        Scanner input = new Scanner(System.in);
  
        int jumang = input.nextInt();
       
        int angkaarr []= new int[jumang];
        int jumlahmin=0;
        for (int i = 0; i < angkaarr.length; i++) {
            int asd = input.nextInt();
            angkaarr[i]=asd;
        }
        
        
        for (int ij = 0; ij < angkaarr.length; ij++) {
            int jl = 0;

            for (int j = ij; j < angkaarr.length; j++) {
                jl=jl+angkaarr[j];
              if (jl<0) {
                jumlahmin++;}  
            }
            
            
        }
        System.out.println(jumlahmin);

}}
